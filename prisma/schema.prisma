generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
  url      = "mysql://mysql:shail012@localhost:3306/e_game_skills"
}

model User {
    id  Int @id @default(autoincrement())
    username    String
    email   String  @unique
    password    String
    role    Role
    region_id   Int?
    region  Region?  @relation(fields: [region_id], references: [id])
    verified    Boolean @default(false)
}

model Region {
  id     Int     @id @default(autoincrement())
  name   String
  users  User[]   // one region â†’ many users
}

enum Role {
    player
    team
    admin
}
